<main class="d-flex flex-column align-items-center w-100 flex-grow-1">
  <h1 class="bg-success p-2 text-center text-light w-100">ALL PRODUCTS</h1>
  <section class="m-3 w-100 d-flex flex-wrap justify-content-center">
    {{#each products}}
      <div class="card m-2" style="width: 18rem;">
        <img src="{{this.photo}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">$ {{this.price}}</p>
          <a href="/products/{{this.id}}" class="btn btn-primary">View Details</a>
          <button class="btn btn-success" onclick="addToCart('{{this.id}}')">Add to Cart</button>
        </div>
      </div>
    {{/each}}
  </section>
</main>